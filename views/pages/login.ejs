        <label>Username:</label>
        <textarea name="username" type="text" placeholder="Enter a Username" required class="form-control input-sm"></textarea>
      </fieldset>
      <fieldset class="form-group">
        <label>Password:</label>
        <textarea name="password" type="password" placeholder="Enter Password" required class="form-control input-sm"></textarea>
      </fieldset>
      <!--a.btn.btn-primary(href="") Submit-->
