  <div class="container">
    <div class="main-content body">
      <br>

    <h1>PLEASE Signup:</h1>
    <!--? insert role="form"-->
    <form action="/auth/signup" method="post">
      <fieldset class="form-group">
        <label>Username:</label>
        <textarea name="username" type="text" placeholder="Enter a Username" required class="form-control input-sm"></textarea>
      </fieldset>
      <fieldset class="form-group">
        <label>Password:</label>
        <textarea name="password" type="password" placeholder="Enter Password" required class="form-control input-sm"></textarea>
      </fieldset>
      <!--a.btn.btn-primary(href="") Submit-->
      <fieldset class="form-group">
        <label>Confirm Password:</label>
        <textarea name="password2" type="password2" placeholder="Enter Password" required class="form-control input-sm"></textarea>
      </fieldset>
      <fieldset class="form-group">
        <label>City:</label>
        <textarea name="city" type="text" placeholder="Enter a City" class="form-control input-sm"></textarea>
      </fieldset>
      <fieldset class="form-group">
        <label>State:</label>
        <textarea name="state" type="text" placeholder="Enter a State" class="form-control input-sm"></textarea>
      </fieldset>
      <button style="margin: 10px" type="submit" value="Log In" class="btn btn-primary">Submit</button><a href="/" class="btn btn-default">Cancel</a>
    </form>
  </div>
</div>
